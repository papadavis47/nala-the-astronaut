---
import { Icon } from 'astro-icon';
---

<nav>
  <div class='menu-container'>
    <Icon name='mdi:dog-side' />
    <div class='links-container'>
      <ul>
        <li><a href='#'>Home</a></li>
        <li><a href='#'>About Nala</a></li>
        <li><a href='#'>MDX Notes</a></li>
        <li><a href='#'>About The Tech</a></li>
      </ul>
    </div>
  </div>
</nav>

<style>
  [astro-icon='mdi:dog-side'] {
    color: inherit;
    width: 56px;
  }

  nav {
    background: linear-gradient(to right top, hsl(45, 60%, 38%), hsl(42, 86%, 22%));
    color: white;
    padding: 8px 0;
  }

  .menu-container {
    display: flex;
    justify-content: space-between;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 16px;
    align-items: center;
  }

  ul {
    display: none;
  }

  @media (min-width: 700px) {
    ul {
      display: flex;
      align-items: center;
    }
  }

  li {
    list-style-type: none;
  }

  ul a {
    display: block;
    color: inherit;
    text-decoration: none;
    font-size: 1.5rem;
    padding: 8px 16px;
    margin-bottom: -12px;
    white-space: nowrap;
  }
</style>
