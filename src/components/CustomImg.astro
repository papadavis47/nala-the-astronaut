---
const { filename, alt, sizes, widths, loading, aspectRatio } = Astro.props;

import { Picture } from '@astrojs/image/components';

const { width, height } = (await import(`../images/${filename}.jpg`)).default;
---

<figure>
  <Picture
    src={import(`../images/${filename}.jpg`)}
    loading={loading ? loading : 'lazy'}
    width={width}
    height={height}
    widths={widths}
    sizes={sizes}
    alt={alt}
    aspectRatio={aspectRatio}
  />
</figure>

<style>
  img {
    height: auto;
    border-radius: 1%;
  }
</style>
