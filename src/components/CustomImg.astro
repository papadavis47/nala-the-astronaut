---
const { filename, alt, sizes, widths, loading, aspectRatio } = Astro.props;

import { Picture } from 'astro:assets';

const image = await import(`../images/${filename}.jpg`);
---

<figure class='py-6'>
  <Picture
    src={image.default}
    loading={loading ? loading : 'lazy'}
    widths={widths}
    sizes={sizes}
    alt={alt}
    aspectRatio={aspectRatio}
    class='h-auto rounded-sm border-2 border-white'
  />
</figure>
