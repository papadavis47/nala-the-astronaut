---
import MainLayout from '@layouts/MainLayout.astro';
import { Picture, Image } from '@astrojs/image/components';
import nalaPic from '@images/nala-playing.jpg';
import sleepingNala from '@images/nala-sleeping.jpg';
---

<MainLayout>
  <div class='container'>
    <div class='title'>
      <h1>Nala</h1>
      <h2>Our First Dog</h2>
    </div>
    <section>
      <p>
        The Davis Family never had a dog before Nala. We knew nothing about raising a dog prior to
        her arrival at our home.
      </p>
      <p>
        This site is about our love for her and the work and learning that goes into caring for
        Nala.
      </p>
      <p>This is little space on the web is a <strong>tribute to our Nala!</strong></p>
    </section>
    <figure>
      <Picture
        src={nalaPic}
        alt='Golden Retriever playing on a lawn'
        widths={[200, 300, 600]}
        sizes='(max-width: 600px) 100vw, 600px'
        aspect-ratio='1:1'
      />
      <figcaption>Nala playing fetch - 2023</figcaption>
    </figure>
    <figure>
      <Picture
        widths={[200, 300, 600]}
        sizes='(max-width: 600px) 100vw, 600px'
        src={sleepingNala}
        alt='Golder Retriever sleeping on carpet'
      />
      <figcaption>Nala sleeping - 2023</figcaption>
    </figure>
  </div>
</MainLayout>

<style>
  .title {
    padding: 20px 0;
  }

  h1 {
    font-size: 3rem;
  }

  h2 {
    font-size: 2rem;
    font-style: italic;
    font-weight: 700;
  }

  p {
    font-size: 1.25rem;
    margin: 16px 0;
  }

  .container {
    margin: 16px 16px;
    padding: 0 16px;
  }

  @media (min-width: 800px) {
    .container {
      max-width: 70%;
      margin: 0 auto;
    }
  }

  figure {
    padding: 24px 0;
  }

  img {
  }
</style>
