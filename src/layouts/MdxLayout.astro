---
import MainLayout from './MainLayout.astro';
import Container from '@components/Container.astro';
import { getEntryBySlug } from 'astro:content';
const { title } = Astro.props;
---

<MainLayout title={title}>
  <Container>
    <slot />
  </Container>
</MainLayout>

<style>
  h1 {
    font-size: 3rem;
  }

  p {
    font-weight: 600;
  }

  .mdx-wrapper {
    max-width: 1000px;
    margin: 32px auto;
    padding: 0 24px;
  }
</style>
